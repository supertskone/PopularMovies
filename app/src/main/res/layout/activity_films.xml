<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/category_films"
    tools:context="com.example.android.miwok.FilmsModule.Activities.FilmsActivity">
    <GridView
        android:id="@+id/list_view_films"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/tan_background"
        style="@style/ItemsStyle"
        android:dividerHeight="2dp"
        android:numColumns="2"
        android:columnWidth="@dimen/fab_margin"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:stretchMode="columnWidth"/>
</RelativeLayout>
